        <div>Settings</div>
        <% if (dbInfo.dob===null) {%>
        <div>Important: You have not yet filled out your date of birth.</div>
        <% } %>
        <form method="post" action="/settings" id="form">
            <div>Username</div>
            <input
                username_old="<%=dbInfo.username %>"
                type="text"
                name="username"
                value="<%=dbInfo.username %>"
                id="username_field"
            />
            <div>First Name</div>
            <input type="text" name="first_name" value="<%=dbInfo.first_name %>" id="first_name_field" />
            <div>Last Name</div>
            <input type="text" name="last_name" value="<%=dbInfo.last_name %>" id="last_name_field" />
            <div>Email</div>
            <input type="email" name="email" value="<%=dbInfo.email %>" id="email_field" />
            <div>Date of Birth</div>
            <% if (dbInfo.dob===null) {%>
            <input name="dob" dob_exists="false" id="dob_field" type="date" />
            <% } else {%> <input name = "dob" id="dob_field" dob_exists="true" type=date" value="<%= dbInfo.dob %>" />
            <% } if (dbInfo.is_tutor === true) { %>
            <div>Tutor Biography</div>
            <% if (dbTutorInfo.biography !== null) {%>
            <input name="tutor_bio" id="tutor_bio_field" type="text" value="<%=dbTutorInfo.biography %>" />
